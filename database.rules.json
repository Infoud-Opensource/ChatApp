{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null && $uid == auth.uid"
      },
      "$name": {
        ".read": "true",
        ".write": "true"
      }
    },
      "messages": {
      ".read":"true",
      ".write":"true"    
    }
  }
}

